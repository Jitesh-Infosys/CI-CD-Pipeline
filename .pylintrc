# This is a sample .pylintrc file generated by Pylint and modified for your project.
# To generate a full default file, run: pylint --generate-rcfile > .pylintrc

[MESSAGES CONTROL]
# Disable specific messages by their symbolic name or code
# Add 'global-statement' (W0603) because it's used for the simple in-memory store.
disable=
    global-statement,
    C0305
    # C0114, # missing-module-docstring (Uncomment if you don't want to add docstrings)
    # C0115, # missing-class-docstring
    # C0116, # missing-function-docstring
    # R1705, # no-else-return (Uncomment if you prefer 'else' after 'return', though fixing is better)


[BASIC]
# A list of additional names to treat as allowed, e.g. for short vars, internal variables.
# Add '_next_id' and '_next_simulated_id' to allow them despite Pylint's default naming.
good-names=i,j,k,ex,_,_next_id,_next_simulated_id

[FORMAT]
# Maximum number of characters on a line (default: 100).
max-line-length=100

[MISCELLANEOUS]
# List of notes to take into account, in addition to the default 'FIXME' and 'TODO'.
#notes=